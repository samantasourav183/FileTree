@{
    Layout = null;
}

<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="SKYPE_TOOLBAR" content="SKYPE_TOOLBAR_PARSER_COMPATIBLE" />
    <title>Sign in</title>
    <!-- // google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200,300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <!-- // -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/css/all.css" rel="stylesheet" type="text/css" media="all" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet" type="text/css" />
    <!-- // menu css -->
    <link href="~/Content/css/menu.css" rel="stylesheet" type="text/css" media="all" />
    <!-- <link href="css/font-awesome.min.css" rel="stylesheet" type="text/css"/> -->
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <!-- ====================================================================================================
      start header
    ===================================================================================================== -->
    <section id="contact">
        <div class="contact-box">
            <div class="contact-links">
                <!-- <h2 class="heading01" style="color: #fff;">Become Master</h2> -->
                <h1 class="signin_heading" style="color: #fff;">Primary School Tree</h1>
                <div class="contact-box_img"> <img src="~/Content/images/signin.png" alt="" class="img-fluid"> </div>
            </div>
            <div class="contact-form-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="signin_logo">
                            <a href="javascript:void(0);"> <img src="~/Content/images/logo.png"> </a>
                        </div>
                        <div class="signin_form">
                            <!-- <h2 class="heading04">Sign In</h2> -->
                            <!-- <ul>
                              <li><a href="javascript:void(0);">New user?</a> </li>
                              <li><a href="javascript:void(0);" class="text-primary">Create an account</a> </li>
                            </ul> -->
                            <form name="frmDetails" method="post" action="@Url.Action("UserSignup","Signup")">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input class="input_field01" name="UserName" placeholder="Full Name" type="text">
                                    </div>
                                    <div class="col-sm-12">
                                        <select name="UserRole">
                                            <option value="0">Select Role</option>
                                            <option value="1">Enginner</option>
                                            <option value="2">Doctor</option>
                                        </select>
                                        </div>
                                        <div class="col-sm-12">
                                            <input class="input_field01" name="Email_Address" placeholder="Email" type="text">
                                        </div>
                                        <div class="col-sm-12">
                                            <input class="input_field01" name="UserPassword" id="UserPassword" placeholder="Password" type="password">
                                        </div>
                                        <div class="col-sm-12">
                                            <input class="input_field01" name="ConfirmPassword" id="ConfirmPassword" placeholder="Confirm Password" type="password">
                                        </div>
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <input type="checkbox" id="signed">
                                                <label for="signed">Keep me signed in</label>
                                            </div>
                                        </div>
                                        <div class="col-sm-12">
                                            <!-- <input class="submt01 login" value="Login" type="submit"> -->
                                            <button class="common_btn01"  type="submit" value="Signup" name="action">Sign Up</button>
                                        </div>
                                    </div>
                            </form>
                            <div class="social_pnl">
                                <h6>Or sign in with</h6>
                                <a href="javascript:void(0);"> <img src="~/Content/images/social01.png" alt=""> </a>
                                <a href="javascript:void(0);"> <img src="~/Content/images/social02.png" alt=""> </a>
                                <a href="javascript:void(0);"> <img src="~/Content/images/social03.png" alt=""> </a>
                                <a href="javascript:void(0);"> <img src="~/Content/images/social04.png" alt=""> </a>
                            </div>
                        </div>
                    </div>
                    <p> &copy; COPYRIGHT | ALL RIGHTS RESERVED, FileTree.com</p>
                </div>
            </div>
        </div>
    </section>

























    <!-- ====================================================================================================
      start script
    ===================================================================================================== -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/myScript.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css">


    @if (TempData["Message"] != null && TempData["Message"].ToString() == "Signup Succesfully")
    {
        <script>
          swal({
    title: "Wow!",
    text: "Signup Successfull",
    type: "success"
});
        </script>
    }

    <script>
        $('#UserPassword, #ConfirmPassword').on('keyup', function () {
            if ($('#UserPassword').val() == $('#ConfirmPassword').val()) {

            }
            else {
                    swal({
                        title: "OOPS!",
                    text: "Password and confirm password should be same.",
                    type: "error"
});
            }
               
        });
    </script>

</body>

</html>
